#:include Layouts/Views/custom_widgets.kv

<GeneralSettingsLayout@ScrollView>:
  BoxLayout:
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    spacing: 30


    BoxLayout:
      orientation: 'vertical'
      size_hint_y: None
      height: 270
      Label:
        text: 'TCP connections'
        size_hint: 1, None
        height: 20
      AnchorLayout:
        Form:
          id: agent_address_form
          text: 'Agent address'
      AnchorLayout:
        Form:
          id: agent_port_form
          text: 'Agent port'
      AnchorLayout:
        Form:
          id: receive_address_form
          text: 'Server address'
      AnchorLayout:
        Form:
          id: receive_port_form
          text: 'Server port'
      AnchorLayout:
        Form:
          id: buffer_size_form
          text: 'Buffer size'
      AnchorLayout:
        Form:
          id: socket_timeout_form
          text: 'Socket timeout'


    BoxLayout:
      orientation: 'vertical'
      size_hint_y: None
      height: 75
      Label:
        text: 'General'
        size_hint: 1, None
        height: 20
      AnchorLayout:
        Form:
          id: frames_buffer_size_form
          text: 'Frames buffer size'

    BoxLayout:
      orientation: 'vertical'
      size_hint_y: None
      height: 150
      Label:
        text: 'Logger'
        size_hint: 1, None
        height: 20
      AnchorLayout:
        Form:
          id: console_print_form
          text: 'Print on console'
      AnchorLayout:
        Form:
          id: file_print_form
          text: 'Print to file'
      AnchorLayout:
        Form:
          id: logs_path_form
          text: 'Logs path'


    BoxLayout:
      orientation: 'vertical'
      size_hint_y: None
      height: 125
      Label:
        text: 'SSH connection'
        size_hint: 1, None
        height: 20
      AnchorLayout:
        Form:
          id: username_form
          text: 'User name'
      AnchorLayout:
        Form:
          id: password_form
          password: True
          text: 'Password'