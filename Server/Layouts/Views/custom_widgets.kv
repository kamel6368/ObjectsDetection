#:include Layouts/Views/custom_widgets.kv

<Separator@Widget>:
  size_hint_y: None
  height: 2
  canvas:
    Color:
      rgba: 1, 1, 1, 1
    Rectangle:
      pos: self.pos
      size: self.size

<Form@BoxLayout>:
  text: ''
  password: False
  value: input.text
  orientation: 'horizontal'
  size_hint: None, 1
  width: dp(500)
  Label:
    text: root.text
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
  TextInput:
    id: input
    text: root.value
    password: root.password
    height: dp(30)
    size_hint_y: None