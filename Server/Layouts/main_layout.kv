<MainLayout>:
  BoxLayout:
    orientation: 'vertical'
    spacing: 15

    RelativeLayout:
      size_hint: 1, None
      height: 40
      AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'center'
        size_hint: 0.5, None
        height: 30
        BoxLayout:
          height: 30
          size_hint: 0.5, None
          orientation: 'horizontal'
          Label:
            id: is_agent_registered_label
            text: 'Agent is not registered'
          Button:
            id: start_shutdown_agent_button
            text: 'Start agent'
            on_press: root._start_shutdown_agent_button_pressed()

      AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'center'
        size_hint: 1, None
        height: 30
        BoxLayout:
          height: 30
          size_hint: 0.4, None
          orientation: 'horizontal'
          Button:
            id: single_two_images_mode_button
            text: 'single_two_images_mode'
            on_press: root._single_two_images_mode_button_on_press()
          Button:
            id: settings
            text: 'settings'

    BoxLayout:
      orientation: 'horizontal'
      spacing: 10
      BoxLayout:
        orientation: 'horizontal'
        id: images_container
        spacing: 5
        Image:
          id: raw_image
          source: 'Resources/no_image.jpg'
        Image:
          id: quantization_image
          source: 'Resources/no_image.jpg'
      BoxLayout:
        orientation: 'vertical'
        size_hint: 0.3, 1
        BoxLayout:
          size_hint: 1, None
          height: 50
          orientation: 'horizontal'
          Button:
            id: previous_frame_button
            text: 'previous_frame'
            disabled: True
            on_press: root._previous_frame_button_on_press()
          Button:
            id: next_frame_button
            text: 'next_frame'
            disabled: True
            on_press: root._next_frame_button_on_press()
        BoxLayout:
          size_hint: 1, None
          height: 50
          orientation: 'horizontal'
          Label:
            text: 'Show only unified objects'
          CheckBox:
            id: show_only_unified_objects_checkbox
            disabled: True
            on_active: root._show_only_unified_objects_checkbox()
        ScrollView:
          Label:
            id: console
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
            valign: 'top'
            text: ''

    BoxLayout:
      orientation: 'horizontal'
      height: 50
      size_hint: 1, None
      spacing: 20
      Button:
        id: start_stop_stream_button
        text: 'start_stream'
        on_press: root._start_stop_stream_button_on_press()
        disabled: True
      BoxLayout:
        orientation: 'vertical'
        Label:
          text: 'stream_mode'
        Spinner:
          id: stream_mode_spinner
          text: 'Each frame'
          values: ['Each frame', 'Video']
          disabled: True
          on_text: root._stream_mode_button_on_text()
      BoxLayout:
        orientation: 'vertical'
        Label:
          text: 'Video duration'
        TextInput:
          id: video_duration_text_input
          text: '3'
          disabled: True
          focus: False
          input_filter: 'int'
      BoxLayout:
        orientation: 'vertical'
        Label:
          text: 'apply_quantization'
        CheckBox:
          id: apply_quantization_checkbox
          disabled: True
          on_active: root._apply_quantization_checkbox_on_state_change()
